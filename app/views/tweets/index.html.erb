   <!-- Page Content -->
   <div class="container">

       <!-- Jumbotron Header -->
       <header class="jumbotron hero-spacer">
           <h1 class="text-center"><%= @twitter_user.user_name %></h1>
<!--            <p>Enjoy.</p> -->
       </header>

       <hr>

       <!-- Title -->
       <div class="row">
           <div class="col-lg-12">
               <h3>Recent Tweets</h3>
           </div>
       </div>
       <!-- /.row -->

       <!-- Page Features -->
       <div class="row text-center">
       	<% @twitter_timeline.each do |tweet| %>
       	  <tr>
           <div class="col-md-12 hero-feature">
               <div class="thumbnail">
                   <!-- <img src="http://placehold.it/800x500" alt=""> -->
                   <div class="caption">
                       <h3></h3>
                       <p><%= tweet.full_text %></p>
                       <p><%= tweet.created_at %></p>
                   </div>
               </div>
           </div>
       	  </tr>
       	<% end %>


       </div>
       <!-- /.row -->

       <hr>

       <!-- Footer -->
       <footer>
           <div class="row">
               <div class="col-lg-12">
                   <p></p>
               </div>
           </div>
       </footer>

   </div>
   <!-- /.container -->

   <!-- jQuery -->
   <script src="js/jquery.js"></script>

   <!-- Bootstrap Core JavaScript -->
   <script src="js/bootstrap.min.js"></script>

